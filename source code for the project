	struct Date{
	    int dd,mm,yy;
	};

	struct medicine_types{
		int ID,quantity,number_of_sold;
		float price,cost_of_each_drug;
		string name;
		Date Manufacture_date,Expiry_date;
		string type;

	};

	struct sale{
     int customer_id,quantity_sold;
	 string customer_name;
	 int med_id;
	 float cost;
	 float m_price;
	 string med_name;
	 Date sale_date;
	};

